actor PlasmaRifle : Weapon 2004
{
	AmmoUse 1
	AmmoGive 40
	AmmoType "Cell"
	SlotNumber 
	States {
		Spawn:
			PLAS A 5
			PLAS A 5 Bright
			Loop
		Fire:
			PLSF A 2
			PLSF A 1 A_FireProjectile("PlasmaBall");
			PLSG B 20
			Goto Ready
		Ready:
			PLSG A 1 A_WeaponReady;
			Loop
	}
}

